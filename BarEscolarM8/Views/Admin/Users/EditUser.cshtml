@model APiConsumer.Models.USERS
@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" name="id" value="@Model.id" />
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" name="fullName" class="form-control" value="@Model.fullname" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" name="email" class="form-control" value="@Model.email" required />
    </div>
    <div class="form-group">
        <label>Username</label>
        <input type="text" name="username" class="form-control" value="@Model.username" required />
    </div>
    <div class="form-group">
        <label>New Password (leave empty to keep)</label>
        <input type="password" name="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role</label>
        <select asp-for="role" class="form-control">
            <option value="0">Student</option>
            <option value="1">Employee</option>
            <option value="2">Admin</option>
        </select>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Users" asp-route-userid="@ViewBag.User?.Id" class="btn btn-secondary">Cancel</a>
</form>
