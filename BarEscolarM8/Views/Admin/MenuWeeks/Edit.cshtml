@model APiConsumer.Models.MENUWEEK
@{
    ViewData["Title"] = "Edit Week";
    var weekDays = ViewBag.WeekDays as List<APiConsumer.Models.MENUDAY>
                   ?? new List<APiConsumer.Models.MENUDAY>();
}

<h2>Edit Week: @Model.weekstart</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Option</th>
            <th>Main Dish</th>
            <th>Soup</th>
            <th>Dessert</th>
            <th>Notes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var day in weekDays)
        {
            <tr>
                <td>@day.date?.ToString("yyyy-MM-dd")</td>
                <td>@day.option</td>
                <td>@day.maindish</td>
                <td>@day.soup</td>
                <td>@day.dessert</td>
                <td>@day.notes</td>
                <td>
                    <a asp-action="EditMenuDay"
                       asp-route-id="@day.id"
                       class="btn btn-sm btn-primary">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="MenuWeeks" class="btn btn-secondary">Back</a>
