@model List<APiConsumer.Models.MATERIALS>

<h2>Products</h2>

<a asp-action="Create" class="btn btn-primary">Create Material</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.name</td>
                <td>
                    @{
                       @p.categoryid
                    }
                </td>
                <td>@p.price €</td>
                <td>@p.stock</td>
                <td>@p.description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.id" class="btn btn-sm btn-warning">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
