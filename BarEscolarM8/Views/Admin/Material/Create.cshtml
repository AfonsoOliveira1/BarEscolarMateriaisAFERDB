@model APiConsumer.Models.MATERIALS

<div class="container mt-4">
    <h2>Criar Novo Material</h2>
    <hr />

    <form asp-action="CreateMaterial" method="post">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Nome</label>
                <input asp-for="name" class="form-control" required />
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Categoria</label>
                <select asp-for="categoryid" class="form-control" required>
                    <option value="">-- Selecione --</option>
                    @foreach (var c in (List<APiConsumer.Models.MATERIALCATEGORIES>)ViewBag.Categories)
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Descrição</label>
            <textarea asp-for="description" class="form-control" rows="2"></textarea>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Preço (€)</label>
                <input asp-for="price" type="number" step="0.01" class="form-control" required />
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Stock Inicial</label>
                <input asp-for="stock" type="number" class="form-control" />
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Criar</button>
            <a asp-action="Material" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>