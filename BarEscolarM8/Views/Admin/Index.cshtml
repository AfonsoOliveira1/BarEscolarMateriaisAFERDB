@model BarEscolarM8.Models.WeekXUsers
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1 class="page-title">Admin Dashboard</h1>

<div class="admin-dashboard-wrapper">

    <div class="dashboard-cards">
        <div class="card admin-card">
            <div class="card-body">
                <h5 class="card-title">Total Semanas de Menu</h5>
            </div>
        </div>

        <div class="card admin-card">
            <div class="card-body">
                <h5 class="card-title">Total Produtos</h5>
            </div>
        </div>

        <div class="card admin-card">
            <div class="card-body">
                <h5 class="card-title">Total Categorias</h5>
            </div>
        </div>

        <div class="card admin-card">
            <div class="card-body">
                <h5 class="card-title">Total Materiais</h5>
            </div>
        </div>
    </div>
    <div>
        <h2>Users Management</h2>

        <p>
            <a asp-action="CreateUser" class="btn btn-primary">Create New User</a>
        </p>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model.Users)
                {
                    <tr>
                        <td>@u.FullName</td>
                        <td>@u.Email</td>
                        <td>@u.UserName</td>
                        <td>@u.Role</td>
                        <td>
                            <a asp-action="EditUser" asp-route-id="@u.Id" class="btn btn-sm btn-warning">Edit</a>
                            <form asp-action="DeleteUser" asp-route-id="@u.Id" method="post" style="display:inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <h2>Menu Weeks</h2>

        <p>
            <a asp-action="CreateWeek" class="btn btn-primary">Create New Week</a>
        </p>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Week Start</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var week in Model.MenuWeek)
                {
                    <tr>
                        <td>@week.Id</td>
                        <td>@week.Weekstart</td>
                        <td>
                            <a asp-action="EditWeek" asp-route-id="@week.Id" class="btn btn-sm btn-warning">Edit</a>
                            <form asp-action="DeleteWeek" asp-route-id="@week.Id" method="post" style="display:inline">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this week?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
