@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>Admin Dashboard</h2>

<p>Welcome, <strong>@User.Identity.Name</strong></p>

<hr />

<ul class="admin-menu">
    <li>
        <a asp-controller="Admin" asp-action="Users">
            Manage Users
        </a>
    </li>
    <li>
        <a asp-controller="Admin" asp-action="MenuWeeks">
             Manage Menu Weeks
        </a>
    </li>
    <li>
        <a asp-controller="Admin" asp-action="Products">
            Manage Products
        </a>
    </li>
    <li>
        <a asp-controller="Admin" asp-action="Categories">
             Manage Categories
        </a>
    </li>
</ul>

<hr />

<div>
    <h4>Quick Stats</h4>
    <ul>
        <li>Total Weeks: @ViewBag.Weeks?.Count</li>
        <li>Total Products: @ViewBag.Products?.Count</li>
        <li>Total Categories: @ViewBag.Categories?.Count</li>
    </ul>
</div>
