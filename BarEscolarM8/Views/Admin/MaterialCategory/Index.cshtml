@model List<APiConsumer.Models.MATERIALCATEGORIES>

<h2>Categorias de Materiais</h2>
<a asp-action="CreateMaterialCategory" class="btn btn-primary mb-3">Nova Categoria</a>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Description</td>
                <td>
                    <a asp-action="EditMaterialCategory" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="DeleteMaterialCategory" asp-route-id="@c.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Apagar?')">Apagar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>