@model APiConsumer.Models.MATERIALCATEGORIES

<h2>Editar Categoria de Material</h2>

<form asp-action="EditMaterialCategory" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label>Nome</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Descrição</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="MaterialCategory" class="btn btn-secondary">Cancelar</a>
</form>