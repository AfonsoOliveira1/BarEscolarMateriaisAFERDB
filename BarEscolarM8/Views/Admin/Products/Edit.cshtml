@model APiConsumer.Models.PRODUCTS

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.id" />

    <div class="form-group">
        <label>Name</label>
        <input name="name" value="@Model.name" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Description</label>
        <input name="description" value="@Model.description" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Category</label>
        <select name="categoryid" class="form-control">
            @foreach (var c in ViewBag.Categories)
            {
                if (Model.categoryid == c.id)
                {
                    <option value="@c.id" selected>@c.name</option>
                }
                else
                {
                    <option value="@c.id">@c.name</option>
                }
            }
        </select>
    </div>

    <div class="form-group mt-2">
        <label>Price (€)</label>
        <input name="price" value="@Model.price" type="number" step="0.01" class="form-control" />
    </div>

    <hr />

    <h5>Nutritional values</h5>

    <div class="row">
        <div class="col">
            <label>Kcal</label>
            <input name="kcal" value="@Model.kcal" class="form-control" />
        </div>
        <div class="col">
            <label>Protein</label>
            <input name="protein" value="@Model.protein" class="form-control" />
        </div>
        <div class="col">
            <label>Fat</label>
            <input name="fat" value="@Model.fat" class="form-control" />
        </div>
        <div class="col">
            <label>Carbs</label>
            <input name="carbs" value="@Model.carbs" class="form-control" />
        </div>
        <div class="col">
            <label>Salt</label>
            <input name="salt" value="@Model.salt" class="form-control" />
        </div>
    </div>

    <div class="form-group mt-2">
        <label>Allergens</label>
        <input name="allergens" value="@Model.allergens" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Stock</label>
        <input name="stock" value="@Model.stock" type="number" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Status</label>
        <select name="isactive" class="form-control">
            @if (Model.isactive == true)
            {
                <option value="true" selected>Active</option>
                <option value="false">Inactive</option>
            }
            else
            {
                <option value="true">Active</option>
                <option value="false" selected>Inactive</option>
            }
        </select>
    </div>

    <button class="btn btn-success mt-3">Save</button>
</form>
