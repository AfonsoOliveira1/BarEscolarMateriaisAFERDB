@model BarEscolarM8.Models.RegisterModel;

<h1 class="page-title login-page-title">Registo</h1>

<div class="generic-card login-card">
    <form method="post" asp-action="Register" class="login-form">
        <div asp-validation-summary="ModelOnly" class="validation-error"></div>
        <input type="hidden" asp-for="Role" value="STUDENT" />

        <div class="form-group">
            <label asp-for="FullName" class="form-label">Nome completo:</label>
            <input asp-for="FullName" class="form-input" />
            <span asp-validation-for="FullName" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserName" class="form-label">Nome de utilizador:</label>
            <input asp-for="UserName" class="form-input" />
            <span asp-validation-for="UserName" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="form-label">Email:</label>
            <input asp-for="Email" class="form-input" />
            <span asp-validation-for="Email" class="validation-error"></span>
        </div>

        <div class="form-group">
            <label asp-for="Passwordhash" class="form-label">Palavra-passe:</label>
            <input asp-for="Passwordhash" type="password" class="form-input" />
            <span asp-validation-for="Passwordhash" class="validation-error"></span>
        </div>

        <button type="submit" class="btn main-btn">Registar</button>

        <a asp-action="Login" class="btn secondary-btn login-register-btn">
            JÃ¡ tenho conta
        </a>
    </form>
</div>